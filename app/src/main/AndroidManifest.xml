<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.criminal_intent">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.The_Big_Nerd">
        <activity
            android:name="com.example.criminal_intent.CriminalIntent.CrimePagerActivity"
            android:parentActivityName="com.example.criminal_intent.CriminalIntent.CrimeListActivity">

        </activity>
        <activity android:name="com.example.criminal_intent.CriminalIntent.CrimeListActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.criminal_intent.CriminalIntent.CrimeActivity" />
    </application>

</manifest>